<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
	default-autowire="autodetect">

	<bean id="organization" class="com.glarimy.spring.samples.twelve.Organization" />
	<bean id="dao" class="com.glarimy.spring.samples.twelve.Dao" />
	<bean id="ds"
		class="org.springframework.jdbc.datasource.SingleConnectionDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost/spring" />
		<property name="username" value="root" />
		<property name="password" value="admin" />
	</bean>

	<bean id="first" class="com.glarimy.spring.samples.twelve.Person">
		<property name="name" value="Krishna" />
		<property name="city" value="Bangalore" />
		<property name="age" value="37" />
	</bean>
	<bean id="second" class="com.glarimy.spring.samples.twelve.Person">
		<property name="name" value="Surekha" />
		<property name="city" value="Bangalore" />
		<property name="age" value="21" />
	</bean>
</beans>

